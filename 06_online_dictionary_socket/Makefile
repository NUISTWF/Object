# Defines a list of subdirectories that need to be recursively compiled
SUBDIRS := src/client src/server

# Defines the default target, recursively calls the Makefiles of all subdirectories, and compiles the top-level file
all:
	@for dir in $(SUBDIRS); do \
        $(MAKE) -C $$dir; \
    done

# Clean up the target files and executable files generated by the Makefile in all subdirectories, as well as the files generated by the top-level compilation
clean:
	@for dir in $(SUBDIRS); do \
        $(MAKE) -C $$dir clean; \
    done